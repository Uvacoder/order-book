{
  "name": "orderbook",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write --ignore-unknown --ignore-path .gitignore",
    "test": "jest --watch",
    "test:ci": "jest --verbose",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.2",
    "next": "11.1.2",
    "preact": "^10.5.14",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "redux": "^4.1.1",
    "redux-saga": "^1.1.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/react": "^17.0.27",
    "@types/webpack-env": "^1.16.2",
    "autoprefixer": "^10.3.7",
    "babel-jest": "^27.2.4",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.2.4",
    "jest-websocket-mock": "^2.2.1",
    "lint-staged": "^11.2.0",
    "mock-socket": "^9.0.5",
    "postcss": "^8.3.9",
    "prettier": "2.4.1",
    "react-test-renderer": "^17.0.2",
    "redux-saga-test-plan": "^4.0.3",
    "simple-git-hooks": "^2.6.1",
    "tailwindcss": "^2.2.16",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "**/*": "yarn format",
    "**/*.{ts,tsx}": "yarn tsc --noEmit --jsx preserve --esModuleInterop"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  }
}
